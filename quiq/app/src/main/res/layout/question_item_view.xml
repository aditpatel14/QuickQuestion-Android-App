<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/question_text"
        android:layout_toLeftOf="@+id/question_votes"
        android:layout_alignParentLeft="true"
        android:text="A question is a linguistic expression to make a request for information, or the request made using such an expression."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/question_votes"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linearlayout_buttons"
        android:layout_width="wrap_content"
        android:text="5"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linearlayout_buttons"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/button_downvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>